code 1
creating behaviors (methods)

class Student {
    void study(){
        //logic 
        System.out.println("Student is studying");
    }
    void sleep() {
        System.out.println("Student is sleeping");
        
    }
}
public class Main 
{
    public static void main(String[] args) {
        Student s1 = new Student();
        s1.study();
        s1.sleep(); // referring
    }
}

code 2 
// refrence variable

class Student {
    int marks =80;
    }
    
    
public class Main 
{
    public static void main(String[] args) {
        Student s1 = new Student(); // refrence variable--s1(objecct)
        System.out.println(s1.marks);
    }
} 

code 3
// multiple refrence

class Student {
    int marks =80;
    }
public class Main 
{
    public static void main(String[] args) {
        Student s1 = new Student(); // refrence variable--s1(objecct)
        Student s2 = s1;  //same objecct
        Student s3 = s2; // same objecct
        System.out.println(s3.marks);
    }
}

