code 1
// inheritance
// single inheritance 
class Vehicle {   // parent
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { //child
    void drive() {
        System.out.println("Bike running");
    }
}
public class Main
{
	public static void main(String[] args) {
		Bike b = new Bike();
		b.start();
		b.drive();
	}
}


code 2
// inheritance
// multi-levevl inheritance 
class Vehicle {   // parent
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { //child
    void drive() {
        System.out.println("Bike running");
    }
}
class SportsBike extends Bike {
    void speed() {
        System.out.println("SportBike is very fast");
    }
}
public class Main
{
	public static void main(String[] args) {
		SportsBike sb = new SportsBike();
	    sb.start();
		sb.drive();
		sb.speed();
	}
}

code 3
// inheritance
// hierarchical inheritance 
class Vehicle {   // parent
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { //child
    void drink() {
        System.out.println("Bike running");
    }
}
class Car extends Vehicle {
    void drink() {
        System.out.println("car running");
    }
}
public class Main
{
	public static void main(String[] args) {
	    Bike b = new Bike();
	    Car c = new Car();
	    
	    b.start();
		b.drink();
		c.start();
		c.drink();
		
	}
}
