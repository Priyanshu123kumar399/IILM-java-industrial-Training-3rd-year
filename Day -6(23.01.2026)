code 1
// inheritance
// single inheritance 
class Vehicle {   // parent
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { //child
    void drive() {
        System.out.println("Bike running");
    }
}
public class Main
{
	public static void main(String[] args) {
		Bike b = new Bike();
		b.start();
		b.drive();
	}
}


code 2
// inheritance
// multilevevl inheritance 
class Vehicle {   // parent
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { //child
    void drive() {
        System.out.println("Bike running");
    }
}
class SportsBike extends Bike {
    void speed() {
        System.out.println("SportBike is very fast");
    }
}
public class Main
{
	public static void main(String[] args) {
		SportsBike sb = new SportsBike();
	    sb.start();
		sb.drive();
		sb.speed();
	}
}
